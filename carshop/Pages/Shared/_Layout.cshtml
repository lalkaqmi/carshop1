<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=1918px, initial-scale=1.0" />
    <title>@ViewData["Title"] - carshop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/carshop.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Sarpanch:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
<div id="mySidenav" class="sidenav">
    <a href="#">Моделі <span class="arrow">➔</span></a>
    <a href="#">Придбання авто <span class="arrow">➔</span></a>
    <a href="#">Сервіси <span class="arrow">➔</span></a>
    <a href="#">Враження та досів <span class="arrow">➔</span></a>
    <a href="#">Пошук диллера <span class="arrow">➔</span></a>
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
</div>




<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 text-center">
            <div class="row">
                <div class="col-xs-1">
                    <span class="menu-icon" onclick="openNav()">☰</span>
                </div>
                <div class="col-xs-8 col-xs-offset-1 col-md-10 col-md-offset-0 text-center">
                    <div class="brand-container">
                        <h1>FORD</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/56eb3b1966.js" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>